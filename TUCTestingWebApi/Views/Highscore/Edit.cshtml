@model TUCTestingWebApi.ViewModels.HighscoreEditViewModel
@{
    ViewData["Title"] = "Home Page";
}

<section class="py-5">
    <div class="row">
        <div class="col-lg-12 mb-5">
            <div class="card">
                <div class="card-header">
                    <h3 class="h6 text-uppercase mb-0">Ändra highscore registrering</h3>
                </div>

                <div class="card-body">
                    <form method="post">
                        <div class="form-group">
                            <label asp-for="Namn">Namn</label>
                            <input class="form-control" asp-for="Namn">
                            <span asp-validation-for="Namn" class="input-validation-error"></span>
                        </div>


                        <div class="form-group">
                            <label asp-for="Country">Land</label>
                            <input class="form-control" asp-for="Country">
                            <span asp-validation-for="Country" class="input-validation-error"></span>
                        </div>


                        <div class="form-group">
                            <label asp-for="Game">Spel</label>
                            <input class="form-control" asp-for="Game">
                            <span asp-validation-for="Country" class="input-validation-error"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Points">Poäng</label>
                            <input class="form-control" asp-for="Points">
                            <span asp-validation-for="Points" class="input-validation-error"></span>
                        </div>

                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>

            </div>

        </div>
    </div>
</section>



