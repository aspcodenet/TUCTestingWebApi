@model TUCTestingWebApi.ViewModels.HighscoreListaViewModel
@{
    ViewData["Title"] = "Home Page";
}

<section class="py-5">
    
    <div class="row">
        
        

        <div class="col-lg-12 mb-5">
            <div class="card">
                <div class="card-header">
                    <h3 class="h6 text-uppercase mb-0">Highscore</h3>
                </div>
                <div class="card-body">
                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th scope="col">Namn</th>
                            <th scope="col">Game</th>
                            <th scope="col">Points</th>
                            <th scope="col"></th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var entry in Model.Items)
                        {
                            <tr>
                                <td>@entry.Namn</td>
                                <td>@entry.Game</td>
                                <td>@entry.Points</td>
                                <td><a asp-controller="Highscore" asp-action="Edit" asp-route-Id="@entry.Id" class="btn btn-secondary active" role="button" aria-pressed="true">Edit</a></td>
                            </tr>
                        }

                        </tbody>
                    </table>


                </div>
            </div>
        </div>

        <a asp-controller="Highscore" asp-action="New" class="btn btn-secondary" role="button" aria-pressed="true">
            Create new
        </a>
        

    </div>

</section>